<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"

    >

    <ImageView
        android:id="@+id/detail_item1_back"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:background="@drawable/detail_back"
        android:scaleType="centerCrop"
        android:src="@drawable/os_abd"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/jb_dendro"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/view_back"
        >
    </View>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_list"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:dividerHeight="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:divider="@null"
        >

    </ListView>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="15dp"
      >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:src="@drawable/ys_h"
          android:id="@+id/ys_detail"
          >
      </ImageView>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

          <TextView
              android:id="@+id/text_detail"
              android:layout_width="140dp"
              android:layout_height="30dp"
              android:text="艾尔海森"
              android:textColor="#000000"
              android:autoSizeTextType="uniform"
              android:textStyle="bold">

          </TextView>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:src="@drawable/icon_5"
              android:id="@+id/star"
              android:adjustViewBounds="true"

              >
          </ImageView>
      </LinearLayout>
  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail"
        >

    </View>


</RelativeLayout>