<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".raw.activity.view3_Activity">

 <ScrollView
     android:id="@+id/scrollview"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="none"

     >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="190dp"
       android:background="@drawable/os_hdj"
       android:orientation="vertical">


   </LinearLayout>

   <com.example.main.raw.Zdyclass.MyListView
       android:id="@+id/mylist"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:divider="#00000000"
       android:dividerHeight="14dp"
       android:listSelector="@android:color/transparent"
       android:paddingLeft="10dp"
       android:paddingTop="10dp"
       android:paddingRight="10dp"
       android:paddingBottom="60dp"
       android:scrollbars="none">

   </com.example.main.raw.Zdyclass.MyListView>
  </LinearLayout>
 </ScrollView>



 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="90dp"
     android:orientation="vertical"
     android:id="@+id/layout_head"
     >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="30dp"
      >

  </TextView>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
   >

   <TextView
       android:id="@+id/view3_text_top"
       android:layout_width="130dp"
       android:layout_height="wrap_content"
       android:text="蹦蹦炸弹"
       android:textColor="#00FFFFFF"
       android:textSize="30dp">

   </TextView>

   <ImageView
       android:id="@+id/view3_top_img"
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:adjustViewBounds="true"
       android:src="@drawable/menu_d">

   </ImageView>

  </RelativeLayout>

 </LinearLayout>

 <TextView
     android:id="@+id/text_id"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="110dp"
     android:text="此处为用户名"
     android:textColor="#FFFFFF"
     android:textSize="28dp">

 </TextView>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="天空岛 70级"
     android:layout_below="@+id/text_id"
     android:textColor="#FFFFFF"
     android:textSize="20dp"
     android:id="@+id/text_tkd"

     >
 </TextView>

 <com.airbnb.lottie.LottieAnimationView
     android:id="@+id/login"
     android:layout_width="match_parent"
     android:layout_height="250dp"
     android:layout_centerInParent="true"
     app:lottie_rawRes="@raw/usertx"
     app:lottie_loop="true"
     app:lottie_autoPlay="true"
    >
 </com.airbnb.lottie.LottieAnimationView>

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/login"
     android:layout_alignParentBottom="true"
     android:layout_marginTop="15dp"
     android:layout_marginBottom="150dp"
     android:text="用户登录"
     android:textAlignment="center"
     android:textColor="#66B9FF"
     android:id="@+id/dlname"
     android:textSize="30dp">

 </TextView>

</RelativeLayout>
