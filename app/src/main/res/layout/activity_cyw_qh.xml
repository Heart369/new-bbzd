        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_syw"
        android:layout_below="@+id/re1"
        android:layout_marginRight="20dp"
        android:id="@+id/re2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3%"

            android:textSize="20sp"
            android:id="@+id/syw_fct_2"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3%"

            android:textSize="20sp"
            android:id="@+id/syw_fct_6"
            android:layout_alignParentRight="true"
            android:textStyle="bold">
        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_syw"
        android:layout_below="@+id/re2"
        android:layout_marginRight="20dp"
        android:id="@+id/re3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3%"

            android:textSize="20sp"
            android:id="@+id/syw_fct_3"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3%"

            android:textSize="20sp"
            android:id="@+id/syw_fct_7"
            android:layout_alignParentRight="true"
            android:textStyle="bold">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re3"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/img_syw">

        <TextView
            android:id="@+id/syw_fct_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="3%"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/syw_fct_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="3%"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_qh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_ck_3"
        android:text="强化"
        android:textColor="#000000"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_qr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_sywzs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_ck_3"
        android:text="确认"
        android:textColor="#000000"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_qh"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/button_ck_3"
        android:text="使用4级小狗粮"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        >

    </Button>

    <Button
        android:id="@+id/btn_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_f"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/button_ck_3"
        android:text="使用20级大狗粮"
        android:textColor="#000000"
        android:textStyle="bold">

    </Button>
<RelativeLayout
