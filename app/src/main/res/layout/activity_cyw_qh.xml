        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syw_qhsl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/jdt">

    </ProgressBar>

    <ImageView
        android:id="@+id/img_syw"
        android:layout_width="175dp"
        android:layout_height="193dp"
        android:layout_below="@+id/syw_jdt"
        android:layout_marginTop="48dp"
        android:src="@drawable/syw_title_ft_1">

    </ImageView>

    <TextView
        android:id="@+id/syw_mainct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syw_jdt"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/img_syw"
        android:text="攻击力"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syw_mainct"
        android:layout_toRightOf="@+id/img_syw"
        android:text="3%"
        android:textSize="30sp"
        android:id="@+id/syw_zct_exp"
        android:textStyle="bold">
    </TextView>
<RelativeLayout
