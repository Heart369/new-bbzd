            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_fct4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/re_fct3"
            android:layout_marginLeft="30dp"
