                android:textSize="15dp">

            </TextView>

            <TextView
                android:id="@+id/new_fct2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="20%"
                android:textColor="#F3CA7D"
                android:textSize="15dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_fct3"
