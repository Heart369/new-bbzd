            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="升级"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>
        <RelativeLayout
